{
  "name": "conv2",
  "version": "0.0.1",
  "description": "A cross platform FFMPEG GUI front-end making it easy for quick video conversion!",
  "homepage": "https://github.com/BurntToasters/CONV2#readme",
  "bugs": {
    "url": "https://github.com/BurntToasters/CONV2/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BurntToasters/CONV2.git"
  },
  "license": "MPL-2.0",
  "author": "BurntToasters",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"const fs=require('fs');const path=require('path');['index.html','main.css'].forEach(f=>fs.copyFileSync(path.join('src/renderer',f),path.join('dist/renderer',f)))\"",
    "watch": "tsc -w",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:flatpak": "npm run build && electron-builder --linux flatpak"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.burnttoasters.conv2",
    "productName": "CONV2",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "assets/icon-mac.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "flatpak",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "AudioVideo",
      "desktop": {
        "MimeType": "video/mp4;video/x-matroska;video/avi;video/quicktime;video/x-ms-wmv;video/x-flv;video/webm;video/x-m4v;video/mpeg;video/3gpp;"
      }
    },
    "flatpak": {
      "base": "org.electronjs.Electron2.BaseApp",
      "baseVersion": "24.08",
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "24.08",
      "sdk": "org.freedesktop.Sdk",
      "finishArgs": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--filesystem=home",
        "--filesystem=xdg-videos",
        "--filesystem=xdg-download",
        "--env=ELECTRON_OZONE_PLATFORM_HINT=auto"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "BurntToasters",
      "repo": "CONV2"
    }
  }
}

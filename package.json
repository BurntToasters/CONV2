{
  "name": "conv2",
  "version": "1.1.1",
  "description": "A cross platform FFMPEG GUI front-end making it easy for quick video conversion!",
  "homepage": "https://github.com/BurntToasters/CONV2#readme",
  "bugs": {
    "url": "https://github.com/BurntToasters/CONV2/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BurntToasters/CONV2.git"
  },
  "license": "MPL-2.0",
  "author": "BurntToasters <code@rosie.run>",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "node build/dist-tools.js clean",
    "compile": "node build/dist-tools.js compile",
    "build": "tsc && node build/dist-tools.js copy",
    "watch": "tsc -w",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --enable-logging",
    "build:win": "npm run compile && electron-builder --win nsis portable msi --arm64 --x64",
    "build:win:x64": "npm run compile && electron-builder --win nsis portable msi --x64",
    "build:win:arm64": "npm run compile && electron-builder --win nsis portable msi --arm64",
    "build:win:nsis": "npm run compile && electron-builder --win nsis",
    "build:win:portable": "npm run compile && electron-builder --win portable",
    "build:win:msi": "npm run compile && electron-builder --win msi",
    "build:msstore": "npm run compile && electron-builder --win appx",
    "build:msstore:x64": "npm run compile && electron-builder --win appx --x64",
    "build:msstore:arm64": "npm run compile && electron-builder --win appx --arm64",
    "build:mac": "npm run compile && dotenv -- electron-builder --mac --universal",
    "build:mac:dev": "npm run compile && electron-builder --mac --universal -c.mac.notarize=false",
    "build:mac:mas": "npm run compile && dotenv -- electron-builder --mac mas",
    "build:linux": "npm run compile && electron-builder --linux",
    "build:linux:x64": "npm run compile && electron-builder --linux --x64",
    "build:linux:arm64": "npm run compile && electron-builder --linux --arm64",
    "build:linux:appimage": "npm run compile && electron-builder --linux AppImage",
    "build:linux:deb": "npm run compile && electron-builder --linux deb",
    "build:linux:rpm": "npm run compile && electron-builder --linux rpm",
    "build:linux:native": "cross-env USE_SYSTEM_FPM=true npm run build:linux",
    "build:flatpak": "npm run compile && electron-builder --linux flatpak",
    "flatpak:setup": "sudo env \"PATH=$PATH\" node build/setup-flatpak.js",
    "flatpak:build": "node build/flatpak.js build",
    "flatpak:build:x64": "node build/flatpak.js build --x64",
    "flatpak:build:arm64": "node build/flatpak.js build --arm64",
    "flatpak:run": "flatpak run com.burnttoasters.conv2",
    "flatpak:bundle": "node build/flatpak.js bundle",
    "flatpak:bundle:x64": "node build/flatpak.js bundle --x64",
    "flatpak:bundle:arm64": "node build/flatpak.js bundle --arm64",
    "flatpak:clean": "node build/flatpak.js clean",
    "patch:beta": "node build/patch-beta.js",
    "restore:release": "node build/restore-release.js",
    "release:win": "npm run licenses && npm run release:prepare && npm run compile && dotenv -- electron-builder --win nsis portable msi --arm64 --x64 --publish always && npm run sign:gpg",
    "release:win:x64": "npm run release:prepare && npm run compile && dotenv -- electron-builder --win nsis portable msi --x64 --publish always && npm run sign:gpg",
    "release:win:arm64": "npm run release:prepare && npm run compile && dotenv -- electron-builder --win nsis portable msi --arm64 --publish always && npm run sign:gpg",
    "release:msstore": "npm run release:prepare && npm run compile && dotenv -- electron-builder --win appx --publish always",
    "release:mac": "npm run licenses && npm run release:prepare && npm run compile && dotenv -- electron-builder --mac --universal --publish always && npm run sign:gpg",
    "release:linux": "npm run licenses && npm run release:prepare && npm run compile && dotenv -- electron-builder --linux --publish always && npm run sign:gpg",
    "release:linux:all": "npm run licenses && npm run release:prepare && npm run compile && dotenv -- electron-builder --linux --publish always && npm run flatpak:clean && npm run flatpak:bundle && npm run sign:gpg",
    "release:linux:native": "cross-env USE_SYSTEM_FPM=true npm run release:linux:all",
    "release:all": "npm run licenses && npm run release:prepare && npm run compile && dotenv -- electron-builder --win nsis portable msi --arm64 --x64 --publish always && dotenv -- electron-builder --mac --universal --publish always && dotenv -- electron-builder --linux --publish always && npm run sign:gpg",
    "release:beta:win": "npm run patch:beta && cross-env IS_BETA=true npm run release:win && npm run restore:release",
    "release:beta:mac": "npm run patch:beta && cross-env IS_BETA=true npm run release:mac && npm run restore:release",
    "release:beta:linux": "npm run patch:beta && cross-env IS_BETA=true npm run release:linux && npm run restore:release",
    "sign:gpg": "node build/gpg-sign.js",
    "licenses": "npx npm-license-crawler --production --json licenses.json",
    "tests": "npm run build && node --test tests/*.test.js",
    "typecheck": "tsc --noEmit",
    "release:prepare": "node build/update-metainfo.js"
  },
  "engines": {
    "node": "24.x",
    "npm": "11.x"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.0",
    "@types/node": "^25.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^11.0.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "electron-updater": "^6.8.3"
  },
  "build": {
    "appId": "com.burnttoasters.conv2",
    "productName": "CONV2",
    "artifactName": "${productName}-${os}-${arch}.${ext}",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "licenses.json"
    ],
    "extraResources": [
      {
        "from": "assets/twemoji",
        "to": "twemoji"
      }
    ],
    "win": {
      "extraResources": [
        {
          "from": "resources/ffmpeg/win/${arch}",
          "to": "ffmpeg"
        },
        {
          "from": "resources/ffmpeg/NOTICE.txt",
          "to": "ffmpeg/NOTICE.txt"
        },
        {
          "from": "resources/ffmpeg/ffmpeg_license.txt",
          "to": "ffmpeg/LICENSE.txt"
        },
        {
          "from": "resources/ffmpeg/SOURCE_OFFER.txt",
          "to": "ffmpeg/SOURCE_OFFER.txt"
        }
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Win-${arch}.${ext}"
    },
    "nsis": {
      "artifactName": "${productName}-Win-${arch}-Setup.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CONV2"
    },
    "portable": {
      "artifactName": "${productName}-Win-${arch}-Portable.${ext}"
    },
    "msi": {
      "perMachine": true,
      "runAfterFinish": false
    },
    "msiProjectCreated": "build/msi-hook.js",
    "appx": {
      "identityName": "BurntToasters.CONV2",
      "publisher": "CN=BC0CB990-55E8-4580-97B7-1E2DAA4B44F6",
      "publisherDisplayName": "BurntToasters",
      "displayName": "CONV2",
      "backgroundColor": "#3a2a4d",
      "minVersion": "10.0.10240.0",
      "maxVersionTested": "10.0.22621.0",
      "languages": [
        "en-US"
      ],
      "showNameOnTiles": true
    },
    "mac": {
      "extraResources": [
        {
          "from": "resources/ffmpeg/mac/${arch}",
          "to": "ffmpeg",
          "filter": ["**/*", "!PLACE_BINARIES_HERE.txt"]
        },
        {
          "from": "resources/ffmpeg/NOTICE.txt",
          "to": "ffmpeg/NOTICE.txt"
        },
        {
          "from": "resources/ffmpeg/ffmpeg_license.txt",
          "to": "ffmpeg/LICENSE.txt"
        },
        {
          "from": "resources/ffmpeg/SOURCE_OFFER.txt",
          "to": "ffmpeg/SOURCE_OFFER.txt"
        }
      ],
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "assets/conv2.icns",
      "artifactName": "${productName}-macOS-${arch}.${ext}",
      "category": "public.app-category.video",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false
    },
    "mas": {
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "provisioningProfile": "build/embedded.provisionprofile"
    },
    "dmg": {
      "backgroundColor": "#0d0d0d",
      "iconSize": 80,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "extraResources": [
        {
          "from": "resources/ffmpeg/linux/${arch}",
          "to": "ffmpeg"
        },
        {
          "from": "resources/ffmpeg/NOTICE.txt",
          "to": "ffmpeg/NOTICE.txt"
        },
        {
          "from": "resources/ffmpeg/ffmpeg_license.txt",
          "to": "ffmpeg/LICENSE.txt"
        },
        {
          "from": "resources/ffmpeg/SOURCE_OFFER.txt",
          "to": "ffmpeg/SOURCE_OFFER.txt"
        }
      ],
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "AudioVideo",
      "artifactName": "${productName}-Linux-${arch}.${ext}",
      "desktop": {
        "entry": {
          "Name": "CONV2",
          "Comment": "Cross-platform FFMPEG GUI for video conversion",
          "Keywords": "video;convert;ffmpeg;transcode;encode;av1;h264;h265;hevc"
        }
      }
    },
    "flatpak": {
      "base": "org.electronjs.Electron2.BaseApp",
      "baseVersion": "24.08",
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "24.08",
      "sdk": "org.freedesktop.Sdk",
      "finishArgs": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--filesystem=home",
        "--filesystem=xdg-videos",
        "--filesystem=xdg-download",
        "--env=ELECTRON_OZONE_PLATFORM_HINT=auto"
      ]
    },
    "afterSign": "build/notarize.js",
    "publish": {
      "provider": "github",
      "owner": "BurntToasters",
      "repo": "CONV2"
    }
  }
}
